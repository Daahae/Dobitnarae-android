<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreManagementFragment"
    android:paddingHorizontal="@dimen/padding_horizontal"
    android:paddingVertical="@dimen/padding_vertical"
    android:scrollbars="none">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScorllView_store"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_store"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:maxWidth="400dp"
                android:src="@drawable/sejong" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="@dimen/content_margin_vertical">
                <TextView
                    android:id="@+id/title_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="가게 이름"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="@dimen/info_title"
                    android:layout_marginBottom="5dp"
                    />

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:focusableInTouchMode="false"
                    android:inputType="textPersonName"
                    android:text="내용없음"
                    android:textSize="@dimen/info_content"
                    android:visibility="visible"
                    android:focusable="false"
                    android:background="@null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="@dimen/content_margin_vertical">
                <TextView
                    android:id="@+id/title_admin_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="관리자 ID"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="@dimen/info_title"
                    android:layout_marginBottom="5dp"
                    />

                <EditText
                    android:id="@+id/edit_admin_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="내용없음"
                    android:textSize="@dimen/info_content"
                    android:visibility="visible"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    android:background="@null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="@dimen/content_margin_vertical">
                <TextView
                    android:id="@+id/title_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="가게 번호"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="@dimen/info_title"
                    android:layout_marginBottom="5dp"
                    />

                <EditText
                    android:id="@+id/edit_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="phone"
                    android:text="내용없음"
                    android:textSize="@dimen/info_content"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="@dimen/content_margin_vertical">
                <TextView
                    android:id="@+id/title_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="가게 소개"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="@dimen/info_title"
                    android:layout_marginBottom="5dp"
                    />

                <EditText
                    android:id="@+id/edit_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="textMultiLine"
                    android:text="내용없음"
                    android:textSize="@dimen/info_content"
                    android:visibility="visible"
                    android:maxLines="10"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="@dimen/content_margin_vertical">
                <TextView
                    android:id="@+id/title_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="가게 정보"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="@dimen/info_title"
                    android:layout_marginBottom="5dp"
                    />

                <EditText
                    android:id="@+id/edit_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="textMultiLine"
                    android:text="내용없음"
                    android:textSize="@dimen/info_content"
                    android:visibility="visible"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="@dimen/content_margin_vertical">
                <TextView
                    android:id="@+id/title_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="가게 위치"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="@dimen/info_title"
                    android:layout_marginBottom="5dp"
                    />

                <EditText
                    android:id="@+id/edit_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="내용없음"
                    android:textSize="@dimen/info_content"
                    android:visibility="visible"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    android:background="@null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="@dimen/content_margin_vertical">
                <TextView
                    android:id="@+id/title_sector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="가게 구역"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="@dimen/info_title"
                    android:layout_marginBottom="5dp"
                    />

                <EditText
                    android:id="@+id/edit_sector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="내용없음"
                    android:textSize="@dimen/info_content"
                    android:visibility="visible"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    android:background="@null"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>